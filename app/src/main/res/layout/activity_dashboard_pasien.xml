<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/body_container"
    tools:context=".activity.DashboardPasien">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_dashboard_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bottom_nav_style"
        android:elevation="2dp"
        app:itemIconSize="20dp"
        app:itemIconTint="@drawable/bottom_nav_item_selector"
        app:itemRippleColor="#19FFFFFF"
        app:itemTextColor="@drawable/bottom_nav_item_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_item_menu" />

</RelativeLayout>